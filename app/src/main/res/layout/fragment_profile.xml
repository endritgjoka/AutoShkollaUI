<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="9dp"
    android:id="@+id/profili">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ProfileFragment"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#E48A05"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_rowWeight="1"
                    android:padding="4dp"
                    android:src="@drawable/premium"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:shapeAppearanceOverlay="@style/circular">
                </com.google.android.material.imageview.ShapeableImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="AUTOSHKOLLA PREMIUM"
                        android:textColor="#F8F6F6"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="Qasje ne te gjithe materialin e nevojshem."
                        android:textColor="#EFE7E7"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.gridlayout.widget.GridLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#E48A05"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_rowWeight="1"
                    android:padding="4dp"
                    android:src="@drawable/premium"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:shapeAppearanceOverlay="@style/circular">
                </com.google.android.material.imageview.ShapeableImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_gravity="center_vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/textView01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="AUTOSHKOLLA PREMIUM"
                        android:textColor="#F8F6F6"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/textView121"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Qasje ne te gjithe materialin e nevojshem."
                        android:textColor="#EFE7E7"
                        android:textSize="13sp"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=">"
                    android:textColor="#807575"
                    android:textSize="20sp"
                    app:layout_column="2"
                    app:layout_gravity="center_vertical|right"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />
            </androidx.gridlayout.widget.GridLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATISTIKA"
            android:layout_gravity="left"
            android:layout_marginLeft="14dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2C2C2A"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">
               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                   android:paddingBottom="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#2C2C2A"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="47dp"
                                android:layout_height="38dp"
                                android:layout_margin="4dp"
                                android:background="@color/black"
                                android:src="@drawable/icons8"
                                app:layout_gravity="left"
                                app:shapeAppearanceOverlay="@style/circular">

                            </com.google.android.material.imageview.ShapeableImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="8 / 84"
                                    android:textColor="#F8F6F6"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TESTET B"
                                    android:textColor="#EFE7E7"
                                    android:textSize="12sp"
                                    app:layout_gravity="center|center_vertical" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.77"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#2C2C2A"
                        app:cardCornerRadius="29dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="47dp"
                                android:layout_height="38dp"
                                android:layout_margin="4dp"
                                android:background="@color/black"
                                android:src="@drawable/icons2"
                                app:layout_gravity="center"
                                app:shapeAppearanceOverlay="@style/circular">

                            </com.google.android.material.imageview.ShapeableImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_gravity="">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="8 / 84"
                                    android:textColor="#F8F6F6"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TESTET B"
                                    android:textColor="#EFE7E7"
                                    android:textSize="12sp"
                                    app:layout_gravity="center|center_vertical" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#2C2C2A"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="47dp"
                                android:layout_height="38dp"
                                android:layout_margin="4dp"
                                android:background="@color/black"
                                android:src="@drawable/icons3"
                                app:layout_gravity="center"
                                app:shapeAppearanceOverlay="@style/circular">

                            </com.google.android.material.imageview.ShapeableImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="8 / 84"
                                    android:textColor="#F8F6F6"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TESTET B"
                                    android:textColor="#EFE7E7"
                                    android:textSize="12sp"
                                    app:layout_gravity="center|center_vertical" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="0.77"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#2C2C2A"
                        app:cardCornerRadius="20dp"
                        app:layout_column="1"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="47dp"
                                android:layout_height="38dp"
                                android:layout_margin="4dp"
                                android:background="@color/black"
                                android:src="@drawable/icons4"
                                app:layout_gravity="center"
                                app:shapeAppearanceOverlay="@style/circular">

                            </com.google.android.material.imageview.ShapeableImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                               >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="8 / 84"
                                    android:textColor="#F8F6F6"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TESTET B"
                                    android:textColor="#EFE7E7"
                                    android:textSize="12sp"
                                    app:layout_gravity="center|center_vertical" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <include layout="@layout/powered_by"/>
    </LinearLayout>
</ScrollView>